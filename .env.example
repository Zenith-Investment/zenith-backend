# ===========================================
# InvestAI Platform - Environment Variables
# ===========================================

# Application
APP_NAME="InvestAI Platform"
APP_VERSION="0.1.0"
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Database - PostgreSQL
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=investai
POSTGRES_PASSWORD=investai
POSTGRES_DB=investai

# ===========================================
# Cache - Redis
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# Message Queue - RabbitMQ
# ===========================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=investai
RABBITMQ_PASSWORD=investai

# Celery
CELERY_BROKER_URL=amqp://investai:investai@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ===========================================
# Vector Database - Qdrant
# ===========================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# ===========================================
# AI/LLM Configuration - Multiple Providers
# ===========================================
# The user can configure their preferred provider in the app settings.
# Priority: 1. User preference -> 2. Ollama -> 3. DeepSeek -> 4. Groq -> 5. Together -> 6. OpenAI -> 7. Anthropic

# Default provider (leave empty for auto-detection)
DEFAULT_LLM_PROVIDER=
# Options: ollama, openai, anthropic, deepseek, groq, together

# -------------------------------------------
# OPEN SOURCE / LOCAL (Recommended)
# -------------------------------------------

# Ollama (local inference - FREE, private, no API costs)
# Install: curl -fsSL https://ollama.com/install.sh | sh
# Pull model: ollama pull qwen2.5:7b
OLLAMA_ENABLED=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b
# Options: qwen2.5:7b, qwen2.5:14b, deepseek-r1:7b, llama3.3:8b, mistral:7b

# DeepSeek API (affordable - ~$0.14/1M tokens)
# Get key: https://platform.deepseek.com/
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat
# Options: deepseek-chat, deepseek-reasoner

# Groq (fast inference - FREE tier available!)
# Get key: https://console.groq.com/
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile
# Options: llama-3.3-70b-versatile, mixtral-8x7b-32768, gemma2-9b-it

# Together AI (wide model selection)
# Get key: https://api.together.xyz/
TOGETHER_API_KEY=
TOGETHER_MODEL=Qwen/Qwen2.5-72B-Instruct-Turbo

# -------------------------------------------
# PROPRIETARY APIs (User's own key)
# -------------------------------------------

# OpenAI (GPT-4o, GPT-4-turbo)
# Get key: https://platform.openai.com/
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo

# Anthropic (Claude Sonnet 4.5)
# Get key: https://console.anthropic.com/
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
# Options: claude-sonnet-4-5-20250929, claude-3-5-sonnet-20241022, claude-3-opus-20240229

# Embedding model (local, no API required)
DEFAULT_EMBEDDING_MODEL=all-MiniLM-L6-v2

# ===========================================
# Market Data APIs
# ===========================================

# Alpha Vantage (free tier: 25 requests/day)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# BRAPI (Brazilian stocks)
BRAPI_TOKEN=your-brapi-token

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_PER_MINUTE=60

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# ===========================================
# Email / SMTP
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@investai.com.br
SMTP_FROM_NAME=InvestAI

# ===========================================
# API URLs
# ===========================================
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ===========================================
# Broker Integrations
# ===========================================
BROKER_SANDBOX_MODE=true

# XP Investimentos
XP_CLIENT_ID=
XP_CLIENT_SECRET=

# Rico (grupo XP)
RICO_CLIENT_ID=
RICO_CLIENT_SECRET=

# Clear (grupo XP)
CLEAR_CLIENT_ID=
CLEAR_CLIENT_SECRET=

# BTG Pactual
BTG_CLIENT_ID=
BTG_CLIENT_SECRET=

# NuInvest (Nubank)
NUINVEST_CLIENT_ID=
NUINVEST_CLIENT_SECRET=

# Banco Inter
INTER_CLIENT_ID=
INTER_CLIENT_SECRET=

# ===========================================
# Payments - Stripe
# ===========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===========================================
# Subscription Settings
# ===========================================
TRIAL_DAYS=7
